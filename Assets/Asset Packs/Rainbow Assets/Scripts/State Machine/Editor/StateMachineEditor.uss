GridBackground {
    --grid-background-color: rgb(40, 40, 40);
    --line-color: rgba(0, 0, 0, 0.2);
    --thick-line-color: rgba(0, 0, 0, 0.5);
    --spacing: 15;
}

Port {
    justify-content: center;
    position: absolute;
    align-self: center;
    width: 100%;
    height: 100%;
    scale: 1 2;
}

Port > Label {
    display: none;
}

.entryState {
    background-color: rgb(21, 110, 48);
    width: 180px;
    height: 40px;
}

.actionState {
    background-color: rgb(79, 75, 75);
    width: 210px;
    height: 50px;
}

.anyState {
    background-color: rgb(209, 123, 96);
    width: 180px;
    height: 40px;
}
